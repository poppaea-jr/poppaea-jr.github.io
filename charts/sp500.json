{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
     
       "title": {
        "text": "Manual Alteration of Data - S&P500",
        "subtitle":"S&P500 index and the same increased by 10%. Source: FRED.",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},
    
      "data": {
      "url": "https://raw.githubusercontent.com/poppaea-jr/poppaea-jr.github.io/main/SP500aug.csv"
    },
    
    "repeat": {"layer": ["SP500", "S&UP10%"]},
   
    "spec": {
        
        "height": 300,
        "width": 260,
 
        "mark": {
            "type":"line",
            "strokeWidth":2},    
  
        "encoding": {
            "x": {
                "field": "DATE",
                "type": "temporal"},
    
            "y": {
                "field": {"repeat": "layer"},
                "type": "quantitative",
                "title": null},
    
            "color": {
                "datum": {"repeat": "layer"},
                "scale": {"range": ["orange", "lightgreen"]}}
          } 
      }
  }