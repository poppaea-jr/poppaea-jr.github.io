{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
       "url": "https://clinicalapi-cptac.esacinc.com/api/tcia/studies/summary",
       "format": {
           "type":"json"}},


    "title": {
        "text": "Participants in CPTAC-3 Cancer Clinical Trials",
        "subtitle": "By tumor code. Source: esacinc.com",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    "width":300,
    "height":300,

    "mark":{
        "type": "bar",
        "color":"DarkCyan"
    },
 

    "encoding": {
      "x": {
          "field": "TCGA_Tumor_Code",
          "type": "ordinal",
          "title":null},

      "y": {
          "field": "Total_Number_of_Participants",
          "type": "quantitative",
          "title":null}
    }
} 