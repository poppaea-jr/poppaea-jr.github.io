{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
    "description": "EGY Global Warming",
  
     "title": {
      "text": "Annual Avg Temperature in Egypt",
      "subtitle":"1901 - 2012, Source: UN Stats",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
    "data": {
      "url": "http://climatedataapi.worldbank.org/climateweb/rest/v1/country/cru/tas/year/EGY.csv"},
    "height": 300,
    "width": 345,
    "mark": {
      "type": "line",
      "point": false,
      "interpolate": "monotone",
      "color": "blueviolet"
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "axis": {
          "title": null,
          "grid": false,
          "labelSeparation": 20,
          "ticks": false
        }
      },
      "y": {
        "field": "data",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}
      }
    }
  }