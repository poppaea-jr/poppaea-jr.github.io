{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/poppaea-jr/poppaea-jr.github.io/main/sentiment_time_series_daily_nicedates.csv",
      "format": {"type": "csv"}
    },
    "title": {
      "text": "Daily Average Sentiment in the r/Stocks SubReddit",
      "subtitle": "For 2021. Using TextBlob. Source: Pushift PRAW",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "width": 300,
    "height": 300,
    "mark": {
      "type": "line",
      "point": false,
      "color": "DarkCyan",
      "strokeWidth": 2,
      "opacity": 1
    },
    "encoding": {
      "x": {"field": "numdate", "type": "temporal", "title": null},
      "y": {"field": "polarity", "type": "quantitative", "title": null}
    }
  }